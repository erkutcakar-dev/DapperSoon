@model DapperSoon.Dtos.DashboardWidgetDto

<div class="col-xl-3 col-sm-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-9">
                    <div class="d-flex align-items-center align-self-start">
                        <h3 class="mb-0">@Model.Value</h3>
                        <p class="text-success ml-2 mb-0 font-weight-medium">@Model.Description</p>
                    </div>
                </div>
                <div class="col-3">
                    <div class="icon icon-box-@Model.Color">
                        <i class="@Model.Icon"></i>
                    </div>
                </div>
            </div>
            <h6 class="text-muted font-weight-normal">@Model.WidgetName</h6>
        </div>
    </div>
</div>
